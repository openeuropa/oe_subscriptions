        'not null' => TRUE,
      ],
      'scope' => [
        'description' => 'Scope of the token.',
        'length' => 255,
        'type' => 'varchar_ascii',
        'not null' => TRUE,
      ],
      'hash' => [
        'description' => 'The token.',
        'length' => 255,
        'type' => 'varchar_ascii',
        'not null' => TRUE,
      ],
      'changed' => [
        'description' => 'Last time the token was changed.',
        'type' => 'int',
        'not null' => TRUE,
      ],
    ],
    'primary key' => [
      'mail',
      'scope',
    ],
